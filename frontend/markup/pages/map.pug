//- Карта
extends ../layouts/default.pug

include ../components/page-header/page-header.pug
include ../components/page-footer/page-footer
include ../components/b-intro/b-intro_right-col
include ../components/b-event-map/b-event-map

block vars
    - var title = 'Карта'

block content
    .page__header
        +page-header({
            modeList: ['abs']
        })
    .page__wrapper
        .page__b-intro
            +b-intro_right-col({
                modeList: ['text-right'],
                bg: '__static__img/content/map-bg.jpg',
                title: 'Карта',
                text: '<p>Салеха́рд — город в России, административный центр Ямало-Ненецкого автономного округа.</p>'
            })
        .page__b-event-map
            +b-event-map

    .page__footer
        +page-footer({
            modeList: ['mt']
        })



