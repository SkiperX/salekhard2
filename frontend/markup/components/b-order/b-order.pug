mixin b-order(data)
    +b.b-order
        form.send-form

            +e.item
                .form-group
                    .form-label ФИО
                    .form-group__cont.form-group__cont_ico.form-group__cont_ico-left
                        input.form-control()
                        .form-group__ico
                            img(src='__static__img/content/i7.svg')

            +e.item
                .form-group
                    .form-label Телефон
                    .form-group__cont.form-group__cont_ico.form-group__cont_ico-left
                        input.form-control(type='tel')
                        .form-group__ico
                            img(src='__static__img/content/i8.svg')

            +e.item
                .form-group
                    .form-label E-mail
                    .form-group__cont.form-group__cont_ico.form-group__cont_ico-left
                        input.form-control(type='mail')
                        .form-group__ico
                            img(src='__static__img/content/i10.svg')

            +e.item
                .form-group
                    .form-label Количество участников
                    .form-group__cont.form-group__cont_ico.form-group__cont_ico-left
                        input.form-control(type='number')
                        .form-group__ico
                            img(src='__static__img/content/i7.svg')

            +e.item
                .form-group
                    .form-label Количество детей до 18 лет
                    .form-group__cont.form-group__cont_ico.form-group__cont_ico-left
                        input.form-control(type='number')
                        .form-group__ico
                            img(src='__static__img/content/i7.svg')
            +e.BUTTON.btn(type='submit') Отправить
            +e.politica

                        label.checkbox.checkbox_light-text
                            input(type='checkbox', checked='')
                            span Отправляя информацию, вы соглашаетесь с <a href='#' target="_blank">обработкой персональных данных</a>

