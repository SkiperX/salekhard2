mixin b-cards-list_news(data)
    - var data = data || {}
    +b.b-cards-list._news
        .container
            +e.items
                each item in data.items
                    +e.A.item(href='#')
                        div.row
                            .col-md-6
                                +e.DIV.col-right
                                    +e.title!=item.title
                                    +e.date-news
                                        !=  pugHelpers.Icon.call(locals, {iconName: 'calendar'})
                                        !=item.date

                                    if item.price
                                        +e.price
                                            !=  pugHelpers.Icon.call(locals, {iconName: 'price'})
                                            != item.price
                                    +e.desc!=item.desc
                                    +e.more Читать далее
                                        !=  pugHelpers.Icon.call(locals, {iconName: 'more'})
                            +e.img-col.col-md-6
                                +e.DIV.col-left
                                    +e.img-cont
                                        +e.img(style=`background-image: url(${item.img})`)

                                    if item.age
                                        +e.age-cont
                                            +e.age!=item.age

