
mixin b-video(data)
    +b.A.b-video(href='#' data-toggle='modal')
        +e.DIV.video-bg(style=`background-image: url(%=static=%img/content/pr-video.jpg)`)
            +e.DIV.video-btn
                !=  pugHelpers.Icon.call(locals, {iconName: 'video'})

        iframe(width='100%', height='100%', data-src='https://www.youtube.com/embed/rj73lCWeZQw?showinfo=0&autoplay=1&rel=0', frameborder='0', allow='autoplay;', allowfullscreen='')
